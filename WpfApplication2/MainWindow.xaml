        <Button x:Name="button" Content="Войти" HorizontalAlignment="Left" VerticalAlignment="Top" Width="127" Margin="10,181,0,0" Height="47" FontFamily="Times New Roman" FontSize="18" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Регистрация" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146" Margin="276.064,181,0,0" Height="47" FontFamily="Times New Roman" FontSize="18" Click="button_Copy_Click" Grid.Column="1"/>

    </Grid>
</Window>
